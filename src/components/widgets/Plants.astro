---
import { motion } from 'framer-motion';
import Plant from '../atoms/Plant.astro';

import './plants.css';
---

<motion.div
  className="plants absolute inset-0 w-full min-h-full overflow-hidden z-10 pointer-events-none"
  initial={{ opacity: 0, y: 20 }}
  animate={{ opacity: 1, y: 0 }}
  transition={{ duration: 0.3, delay: 0.1 }}
  viewport={{ once: false }}
  client:load
>
  <Plant
    plantName="hackpula-plants"
    size="w-[200%] md:w-full"
    position={{ x: '-left-[50%] md:left-[0%]', y: 'bottom-0', z: 'z-[2]' }}
    className="pointer-events-none overflow-y-visible"
  />
</motion.div>
