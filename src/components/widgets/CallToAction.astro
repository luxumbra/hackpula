---

const { isLive } = Astro.props;
const innerStyles = 'cta__inner py-0 2xl:pt-8 2xl:pb-56';
---

	<div class="cta relative max-w-6xl mx-auto px-4 sm:px-6 z-30">

		<div class={innerStyles}>
			<div class="max-w-3xl mx-auto text-center p-6 rounded-md shadow-xl dark:shadow-none">
				<div class="mt-2 2xl:mt-6">
				<a href={isLive ? "/schedule" : "/tickets"} class="cta__join-button btn btn-ghost text-secondary mb-4 sm:mb-0 bg-gradient-tertiary text-base xs:text-2xl md:text-2xl px-5 py-6 md:px-8 md:py-8 leading-[0] inline-flex content-center rounded-xl hover:scale-95 transition-all delay-100 duration-200 ease-in-out border-2">
					{isLive ? 'View Schedule' : 'Join!' }
				</a>
				</div>
			</div>
		</div>
	</div>
