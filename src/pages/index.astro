---
import { SITE } from '~/config.mjs';
import { getCanonical, getHomePermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import Hero, { HeroProps } from '~/components/widgets/Hero.astro';
import ThreeD from '~/components/widgets/ThreeD';
import Plants from '~/components/widgets/Plants.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  canonical: getCanonical(getHomePermalink()),
};

const heroCopy: HeroProps = {
  titleLn1: 'Hack Pula',
  titleLn2: '',
  subtitle: 'Coming soon',
  ctaUrl: 'https://form.typeform.com/to/puqTWK9Z',
  ctaUrl2: 'https://form.typeform.com/to/puqTWK9Z',
  dates: 'August 13-15th',
};
---

<Layout {meta}>
  <Hero {...heroCopy} />
  <Plants />
  <ThreeD client:load />
</Layout>
